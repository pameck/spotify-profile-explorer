<h3>Welcome, <%= @user.name %></h3>

<p id="notice"><%= notice %></p>
<%= image_tag(@user.image, :alt => @user.name) %>

<p>
  <strong>Product:</strong>
  <%= @user.product %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Country:</strong>
  <%= @user.country %>
</p>

<table>
  <tbody>
    <% @following.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
