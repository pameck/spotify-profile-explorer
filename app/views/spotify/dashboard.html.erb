
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-12">
    <h3>Welcome, <%= @user.name %></h3>
    <%= image_tag(@user.image, :alt => @user.name, :class => "img-rounded") unless @user.image.nil?%>
  </div>
</div>
<br>
<div class="row">
  <div class="col-xs-6">
  <h4><strong>Top tracks:</strong></h4>
    <table class="table table-striped table-bordered table-hover table-condensed table-responsive">
      <% @top_tracks.each do |track| %>
        <tr>
          <td>
            <strong><%= track.name %></strong> by <%= track.artist %> <br>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-xs-6">
    <h4><strong>Top artists:</strong></h4>
    <table class="table table-striped table-bordered table-hover table-condensed table-responsive">
      <% @top_artists.each do |artist| %>
        <tr>
          <td>
            <%= artist.name %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <h4><strong>You're following these artists:</strong></h4>
    <table class="table table-striped table-bordered table-hover table-condensed table-responsive">
      <% @following.each do |artist| %>
        <tr>
          <td>
            <%= artist.name %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>